<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smartlibrary.dao.SchoolDao">
	<!-- 查询所有  -->
	<select id="getSchoolList" parameterType="School" resultType="School">
		select school_id as school_id,
			   name as name
			   from school
	</select>
	<!-- 查询单个  -->
	<select id="getOneSchool" parameterType="School" resultType="School">
		select school_id as school_id,
			   name as name
			   from school
			   where school_id = #{school_id}
	</select>
	<!-- 增加单个  -->
	<insert id="addSchool" parameterType="School" useGeneratedKeys="true" keyProperty="school_id">
		insert into
		school (
				name
			   	)
			   	values (
			   	#{name}
			   	)
	</insert>
	<!-- 修改单个  -->
	<update id="editSchool" parameterType="School" useGeneratedKeys="true" keyProperty="school_id">
		update
		school
		set name 		= #{name}
		where school_id = #{school_id}
	</update>
	<!-- 查询单个学校对应的广告链接  -->
	<select id="getAd_url" parameterType="School" resultType="String">
		select ad_url as ad_url
			   from school
			   where school_id = #{school_id}
	</select>
</mapper>